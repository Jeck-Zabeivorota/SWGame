<Border x:Class="SWGame.GameObjects.Unit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:SWGame.GameObjects"
        mc:Ignorable="d"
        MouseLeftButtonDown="Unit_MouseLeftButtonDown"
        MouseLeftButtonUp="Unit_MouseLeftButtonUp"
        MouseLeave="Unit_MouseLeave"
        Height="40" Width="40">
    
    <DockPanel VerticalAlignment="Bottom">
        
        <Rectangle x:Name="XHealtLevel"
                   DockPanel.Dock="Bottom"
                   Width="40"
                   Height="2"
                   Fill="YellowGreen"
                   HorizontalAlignment="Left"/>
        
        <Rectangle x:Name="XShieldLevel"
                   DockPanel.Dock="Bottom"
                   Width="0"
                   Height="2"
                   Fill="CornflowerBlue"
                   HorizontalAlignment="Left"/>
        
    </DockPanel>
    
</Border>
