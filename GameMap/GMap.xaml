<UserControl x:Class="SWGame.GameMap.GMap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:l="clr-namespace:SWGame.GameMap"
        mc:Ignorable="d"
        Background="White"
        d:DesignHeight="450" d:DesignWidth="800">

    <Grid>

        <Canvas x:Name="UIMap"/>

        <Rectangle x:Name="UIBackground"
                   MouseLeftButtonDown="Back_MouseLeftButtonDown"
                   MouseLeftButtonUp="Back_MouseLeftButtonUp"
                   MouseLeave="Back_MouseLeave"/>

    </Grid>

</UserControl>
